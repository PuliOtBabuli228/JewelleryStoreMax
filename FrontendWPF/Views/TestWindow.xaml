<Window x:Class="FrontendWPF.Views.TestWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FrontendWPF.Views"
        mc:Ignorable="d"
        Title="Aura Jewels"
        Height="800" Width="1200"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        WindowStyle="None"
        Background="#FFFDF9F3">

    <Grid>
        <!--<Grid.ColumnDefinitions>
            <ColumnDefinition Width="80"/>
            <ColumnDefinition Width="607*" />
            <ColumnDefinition Width="343*"/>
            <ColumnDefinition Width="163.999"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="51"/>
            <RowDefinition Height="4.95"/>
            <RowDefinition Height="39.85"/>
            <RowDefinition Height="40" />
            <RowDefinition Height="90" />
            <RowDefinition />
            <RowDefinition Height="77" />
        </Grid.RowDefinitions>-->

        <!-- Верхняя панель -->
        <StackPanel Background="#FFE8C5" Height="60" VerticalAlignment="Top" Margin="0,0,0,0">
            <!-- Название магазина -->
            <Image Source="/images/logotype.png" VerticalAlignment="Center" Margin="10,15,1000,5"/>

            <!-- Поле поиска -->
            <Grid Width="300" Margin="870,-30,0,0" DockPanel.Dock="Right">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="18*"/>
                    <ColumnDefinition Width="7*"/>
                </Grid.ColumnDefinitions>
                <TextBox x:Name="SearchTextBox"
                         VerticalContentAlignment="Center"
                         Padding="5"
                         Background="White"
                         BorderBrush="#D4AF37"
                         BorderThickness="1"
                         TextChanged="SearchTextBox_TextChanged" Grid.ColumnSpan="2" HorizontalAlignment="Right" Width="300"/>
                <TextBlock x:Name="SearchPlaceholder"
                           Text="Поиск"
                           Foreground="Gray"
                           Margin="10,0,0,0"
                           VerticalAlignment="Center"
                           IsHitTestVisible="False"
                           Visibility="Visible" Grid.ColumnSpan="2"/>
            </Grid>
        </StackPanel>

        <!-- Основная часть -->
        <Grid Margin="0,60,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="250"/>
            </Grid.ColumnDefinitions>

            <!-- Левая часть (категории и фильтры) -->
            <StackPanel>
                <StackPanel Orientation="Horizontal" Background="#FFE8C5" Height="40">
                    <Button Content="Всё" Width="120"/>
                    <Button Content="Ожерелья" Width="120"/>
                    <Button Content="Кольца" Width="120"/>
                    <Button Content="Серьги" Width="120"/>
                    <Button Content="Браслеты" Width="120"/>
                </StackPanel>

                <!-- Фильтры -->
                <StackPanel Orientation="Horizontal" Margin="10" HorizontalAlignment="Left" VerticalAlignment="Top">
                    <StackPanel>
                        <TextBlock Text="Цена" FontWeight="SemiBold" Margin="0,0,0,5"/>
                        <ComboBox Width="150" Height="30">
                            <ComboBoxItem Content="До 5 000 ₽"/>
                            <ComboBoxItem Content="5 000–10 000 ₽"/>
                            <ComboBoxItem Content="10 000–20 000 ₽"/>
                            <ComboBoxItem Content="20 000 ₽ и выше"/>
                        </ComboBox>
                    </StackPanel>

                    <StackPanel>
                        <TextBlock Text="Вес (г)" FontWeight="SemiBold" Margin="0,0,0,5"/>
                        <ComboBox Width="150" Height="30">
                            <ComboBoxItem Content="До 1 г"/>
                            <ComboBoxItem Content="1–5 г"/>
                            <ComboBoxItem Content="5–10 г"/>
                            <ComboBoxItem Content="10 г и выше"/>
                        </ComboBox>
                    </StackPanel>

                    <StackPanel>
                        <TextBlock Text="Металл" FontWeight="SemiBold" Margin="0,0,0,5"/>
                        <ComboBox Width="150" Height="30">
                            <ComboBoxItem Content="Золото"/>
                            <ComboBoxItem Content="Серебро"/>
                            <ComboBoxItem Content="Платина"/>
                            <ComboBoxItem Content="Другой металл"/>
                        </ComboBox>
                    </StackPanel>

                    <StackPanel>
                        <TextBlock Text="Вставка" FontWeight="SemiBold" Margin="0,0,0,5"/>
                        <ComboBox Width="150" Height="30">
                            <ComboBoxItem Content="Бриллиант"/>
                            <ComboBoxItem Content="Изумруд"/>
                            <ComboBoxItem Content="Рубин"/>
                            <ComboBoxItem Content="Сапфир"/>
                            <ComboBoxItem Content="Без вставки"/>
                        </ComboBox>
                    </StackPanel>
                </StackPanel>


                <!-- Пустой список товаров -->
                <TextBlock Text="Ничего не найдено" Foreground="Gray" FontSize="14"
                           HorizontalAlignment="Center" VerticalAlignment="Center"
                           Margin="0,100,0,0"/>
            </StackPanel>

            <!-- Правая панель -->
            <StackPanel Grid.Column="1" Background="#FFE8C5"  Margin="0,0,0,0">
                <Button Content="Корзина" Foreground="Black" Height="50" Margin="0,250,0,0"/>
                <Button Content="Избранное" Foreground="Black" Height="50" Margin="0,10,0,0"/>
            </StackPanel>
        </Grid>

        <!-- Нижняя панель -->
        <DockPanel Background="#FFE8C5" Height="60" VerticalAlignment="Bottom">
            <TextBlock Text="Итого" FontWeight="Bold" FontSize="16" VerticalAlignment="Center" Margin="20,0,0,0"/>
            <Button Content="Заказать"
                    Width="200" Height="40" Margin="20,0,0,0"
                    Background="#F4A7B9" Foreground="Black"
                    HorizontalAlignment="Left"/>
        </DockPanel>
    </Grid>
</Window>