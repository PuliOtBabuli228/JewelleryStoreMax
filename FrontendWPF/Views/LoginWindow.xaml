<Window x:Class="FrontendWPF.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FrontendWPF.Views"
        mc:Ignorable="d"
        Title="Авторизация"
        Height="400" Width="600"
        WindowStartupLocation="CenterScreen"
        FontFamily="Segoe UI"
        ResizeMode="NoResize"
        Background="Transparent">

    <Border Background="#FFFDF9F3" BorderBrush="#B8860B" BorderThickness="2" Padding="20" SnapsToDevicePixels="True">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Canvas Grid.RowSpan="2">
                <Image Source="/images/img.jpg" Height="372" Width="576"/>
                <Rectangle Width="303" Height="359"
                           Fill="White"/>
            </Canvas>
            
            <StackPanel Grid.Row="1" Margin="20,30,270,30">
                <Image Source="/images/logotype.png" HorizontalAlignment="Center" Margin="0,0,5,0" Height="27" Width="100"/>
                
                <TextBlock Text="Логин:" FontWeight="SemiBold" Foreground="#333"/>
                <TextBox Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}"
                         Height="30" Margin="0,5,3,10" Padding="5"
                         Background="#FFF9F5EB" BorderBrush="#D4AF37" BorderThickness="1" />

                <TextBlock Text="Пароль:" FontWeight="SemiBold" Foreground="#333"/>
                <TextBox x:Name="PasswordBox" Text="{Binding Password}"
                        Height="30" Margin="0,5,3,0" Padding="5"
                        Background="#FFF9F5EB" BorderBrush="#D4AF37" BorderThickness="1" />


                <TextBlock Text="{Binding Status}" Foreground="DarkRed" 
                        FontWeight="Bold" TextAlignment="Center" Margin="0,35,0,0"/>
                <Button Content="Войти" Command="{Binding LoginCommand}"
                        Width="120" Height="35" FontWeight="Bold"
                        Background="#D4AF37" Foreground="White"
                        BorderThickness="0" Cursor="Hand"
                        Margin="0,10,0,5">
                    <Button.Effect>
                        <DropShadowEffect ShadowDepth="2" BlurRadius="5" Color="Gray"/>
                    </Button.Effect>
                </Button>

                <!-- Новая кнопка Регистрация -->
                <Button Content="Регистрация"
                        Width="120" Height="35" FontWeight="Bold"
                        Background="#D4AF37" Foreground="White"
                        BorderThickness="0"
                        Cursor="Hand"
                        Click="RegisterButton_Click">
                    <Button.Effect>
                        <DropShadowEffect ShadowDepth="2" BlurRadius="5" Color="Gray"/>
                    </Button.Effect>
                </Button>
            </StackPanel>
        </Grid>
    </Border>
</Window>