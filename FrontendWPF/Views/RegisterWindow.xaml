<Window x:Class="FrontendWPF.Views.RegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Регистрация"
        Height="350"
        Width="450"
        WindowStartupLocation="CenterScreen"
        FontFamily="Segoe UI"
        FontSize="14"
        WindowStyle="None"
        ResizeMode="NoResize"
        Background="Transparent">

    <Border Background="#FFFDF9F3" CornerRadius="15" BorderBrush="#C9B037" BorderThickness="2" Padding="20" >
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Кнопка закрытия -->
            <Button Content="✕"
                    Margin="0,-15,-15,0"
                    Width="30" Height="30"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Top"
                    Background="Transparent"
                    Foreground="#B8860B"
                    BorderThickness="0"
                    FontSize="16"
                    FontWeight="Bold"
                    Cursor="Hand"
                    Click="CloseButton_Click"/>
            
            <!-- Заголовок -->
            <TextBlock Text="Регистрация нового пользователя"
                       FontSize="20"
                       FontWeight="Bold"
                       Foreground="#B8860B"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,20"/>

            <!-- Логин -->
            <StackPanel Grid.Row="1" Margin="0,0,0,10">
                <TextBlock Text="Логин:" Foreground="#7A5C2E"/>
                <TextBox Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}"
                         Height="30"
                         Background="#FFF8F1E9"
                         BorderBrush="#D1B06B"
                         BorderThickness="1"
                         VerticalContentAlignment="Center"/>
            </StackPanel>

            <!-- Пароль -->
            <StackPanel Grid.Row="2" Margin="0,0,0,10">
                <TextBlock Text="Пароль:" Foreground="#7A5C2E"/>
                <TextBox x:Name="PasswordBox"
                             Height="30"
                             Background="#FFF8F1E9"
                             BorderBrush="#D1B06B"
                             BorderThickness="1"
                             Tag="Введите пароль"
                             Text="{Binding Password}" 
                             VerticalContentAlignment="Center"/>
            </StackPanel>

            <!-- Роль -->
            <StackPanel Grid.Row="3" Margin="0,0,0,10">
                <TextBlock Text="Роль:" Foreground="#7A5C2E"/>
                <ComboBox ItemsSource="{Binding Roles}"
                          SelectedItem="{Binding Role}"
                          Background="#FFF8F1E9"
                          BorderBrush="#D1B06B"
                          Height="30"
                          BorderThickness="1"/>
            </StackPanel>

            <!-- Кнопка регистрации -->
            <Button Grid.Row="4"
                    Content="Зарегистрироваться"
                    Command="{Binding RegisterCommand}"
                    Width="220"
                    Height="40"
                    Margin="0,20,0,10"
                    HorizontalAlignment="Center"
                    FontWeight="Bold"
                    Foreground="White"
                    Background="#C9B037"
                    BorderBrush="#B08A24"
                    BorderThickness="1"
                    Cursor="Hand"/>

            <!-- Статус -->
            <TextBlock Grid.Row="4"
                       Text="{Binding Status}"
                       Foreground="DarkGreen"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Bottom"
                       FontWeight="SemiBold"
                       Margin="0,0,0,0"/>
        </Grid>
    </Border>
</Window>
